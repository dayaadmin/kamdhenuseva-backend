# Environment Variables
ENVIRONMENT=development
SERVER_PORT=4000
CLIENT_PORT=3000
API_VERSION=1
NODE_ENV=development

# CORS Options
CLIENT_URL=http://localhost:3000,http://localhost:3001

# MongoDB
MONGO_URI=<your_mongo_uri>

# JWT Configuration
JWT_SECRET=<your_jwt_secret>
JWT_EXPIRY=7d

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=<your_smtp_user>
SMTP_PASS=<your_smtp_password>

# Razorpay API Keys (Get from Razorpay Dashboard)
RAZORPAY_KEY_ID=<your_rzp_key_id>
RAZORPAY_KEY_SECRET=<your_rzp_secret_key>

# Razorpay Webhook Secret (Generate this in Razorpay)
RAZORPAY_WEBHOOK_SECRET=<your_rzp_webhook_secret>

# Webhook URL (For Local Testing - Replace with Public URL in Production)
WEBHOOK_URL=http://localhost:4000/api/v1/payments/webhook